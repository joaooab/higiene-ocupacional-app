<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/AmbientListFragment">

    <fragment
        android:id="@+id/AmbientListFragment"
        android:name="br.com.joaoov.ui.AmbientListFragment"
        android:label="@string/ambient_fragment_label"
        tools:layout="@layout/fragment_ambient">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/LevantamentoDetailsFragment" />
        <action
            android:id="@+id/action_LevantamentoFragment_to_ambientCreateFragment"
            app:destination="@id/ambientCreateFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/LevantamentoDetailsFragment"
        android:name="br.com.joaoov.ui.AmbientDetailFragment"
        android:label="@string/ambient_detail_fragment_label"
        tools:layout="@layout/fragment_ambient_create">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/AmbientListFragment" />
    </fragment>
    <fragment
        android:id="@+id/ambientCreateFragment"
        android:name="br.com.joaoov.ui.AmbientCreateFragment"
        android:label="Criar Ambiente"
        tools:layout="@layout/fragment_ambient_create">
        <action
            android:id="@+id/action_ambientCreateFragment_to_LevantamentoFragment"
            app:destination="@id/AmbientListFragment" />
    </fragment>
</navigation>
