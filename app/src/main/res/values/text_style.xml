<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextFontMedium" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextFontRegular" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextFontBold" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="TextFontLight" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextItemTitle" parent="TextFontRegular">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextItemSubTitle" parent="TextFontRegular">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextItemDetail" parent="TextFontRegular">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#99000000</item>
    </style>

    <style name="TextItemDate" parent="TextFontRegular">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#D9000000</item>
    </style>

    <style name="TextSync" parent="TextFontRegular">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>